<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.Bundle"
        android:orientation="horizontal"
        android:background="@color/teal_100">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:padding="8dp"
            >

        <TextView
                android:text="City"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cityTV"
                android:layout_margin="16dp"
                style="@style/NameStyle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        <TextView
                android:text="Country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/countryTV"
                android:layout_margin="16dp"
                style="@style/NameStyle"
                app:layout_constraintTop_toBottomOf="@+id/cityTV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        <TextView
                android:text="Date from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dateFromTV"
                android:layout_margin="16dp"
                style="@style/NameStyle"
                app:layout_constraintTop_toBottomOf="@+id/countryTV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        <TextView
                android:text="Duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/durationTV"
                android:layout_margin="16dp"
                style="@style/NameStyle"
                app:layout_constraintTop_toBottomOf="@+id/dateFromTV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        <TextView
                android:text="Type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/typeTV"
                android:layout_margin="16dp"
                style="@style/NameStyle"
                app:layout_constraintTop_toBottomOf="@+id/durationTV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        <TextView
                android:text="Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/priceTV"
                android:layout_margin="16dp"
                style="@style/NameStyle"
                app:layout_constraintTop_toBottomOf="@+id/typeTV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        <TextView
                android:text="Travel Agency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/agencyTV"
                android:layout_margin="16dp"
                style="@style/NameStyle"
                app:layout_constraintTop_toBottomOf="@+id/priceTV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />




    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:padding="8dp"
            android:background="@color/teal_200">
        <!--      remove line above after      -->



        <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cityEditText"
                android:layout_margin="16dp"
                style="@style/NameStyle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/countryEditText"
                android:layout_margin="16dp"
                style="@style/NameStyle"
                app:layout_constraintTop_toBottomOf="@+id/cityEditText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        <EditText
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dateFromBundleEditText"
                android:layout_margin="16dp"
                style="@style/NameStyle"
                app:layout_constraintTop_toBottomOf="@+id/countryEditText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        <EditText
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/durationBundleEditText"
                android:layout_margin="16dp"
                style="@style/NameStyle"
                app:layout_constraintTop_toBottomOf="@+id/dateFromBundleEditText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        <EditText
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/typeBundleEditText"
                android:layout_margin="16dp"
                style="@style/NameStyle"
                app:layout_constraintTop_toBottomOf="@+id/durationBundleEditText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        <EditText
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/priceBundleEditText"
                android:layout_margin="16dp"
                style="@style/NameStyle"
                app:layout_constraintTop_toBottomOf="@+id/typeBundleEditText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/agencyBundleEditText"
                android:layout_margin="16dp"
                style="@style/NameStyle"
                app:layout_constraintTop_toBottomOf="@+id/priceBundleEditText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />




        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:id="@+id/saveBundleButton"
                app:backgroundTint="@color/teal_700"
                android:textColor="@color/white"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/agencyBundleEditText" />


        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:id="@+id/deleteBundleButton"
                android:visibility="visible"
                app:backgroundTint="@color/teal_700"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/agencyBundleEditText"
                 />



    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>